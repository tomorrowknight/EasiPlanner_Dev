html {
	width: 100%;
	height: 100%;
	margin: 0;
}

body {
	width: 100%;
	height: 100%;
	margin: 0;
	font-family: sans-serif;
}

#map {
	width: 100%;
	height: 100%;
	margin: 0;
}

#toolbox {
	position: absolute;
	top: 8px;
	right: 8px;
	padding: 3px;
	border-radius: 4px;
	color: #fff;
	background: rgba(255, 255, 255, 0.4);
	z-index: 100;
}

#layerswitcher {
	margin: 0;
	padding: 10px;
	border-radius: 4px;
	background: rgba(0, 60, 136, 0.5);
	list-style-type: none;
}